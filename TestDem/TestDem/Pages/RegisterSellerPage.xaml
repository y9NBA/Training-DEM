<Page x:Class="TestDem.RegisterSellerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestDem"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterSellerPage">

    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <Button Content="Назад" Margin="5" Click="Back_Click"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Margin="0, 0, 0, 10" Orientation="Horizontal">
                <Label Content="Логин *" Width="100"/>
                <TextBox x:Name="Login" Width="150"/>
            </StackPanel>
            <StackPanel Margin="0, 0, 0, 10" Orientation="Horizontal">
                <Label Content="Пароль *" Width="100"/>
                <PasswordBox x:Name="Password" Width="150"/>
            </StackPanel>

            <StackPanel Margin="0, 0, 0, 10" Orientation="Horizontal">
                <Label Content="Фамилия *" Width="100"/>
                <TextBox x:Name="SecondName" Width="150"/>
            </StackPanel>
            <StackPanel Margin="0, 0, 0, 10" Orientation="Horizontal">
                <Label Content="Имя *" Width="100"/>
                <TextBox x:Name="FirstName" Width="150"/>
            </StackPanel>
            <StackPanel Margin="0, 0, 0, 10" Orientation="Horizontal">
                <Label Content="Отчество" Width="100"/>
                <TextBox x:Name="Patronymic" Width="150"/>
            </StackPanel>

            <StackPanel Margin="0, 0, 0, 10" Orientation="Horizontal">
                <Label Content="Телефон *" Width="100"/>
                <TextBox x:Name="NumberPhone" Width="150"/>
            </StackPanel>
            <StackPanel Margin="0, 0, 0, 10" Orientation="Horizontal">
                <Label Content="Почта" Width="100"/>
                <TextBox x:Name="Email" Width="150"/>
            </StackPanel>

            <StackPanel Margin="0, 0, 0, 10" Orientation="Horizontal">
                <Label Content="Адрес *" Width="100"/>
                <TextBox x:Name="Address" Width="150"/>
            </StackPanel>

            <StackPanel Margin="0, 10">
                <Button Content="Зарегистрироваться" Click="Register_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
