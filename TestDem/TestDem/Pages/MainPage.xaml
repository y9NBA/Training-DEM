<Page x:Class="TestDem.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestDem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage"
      Loaded="Page_Loaded">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
            <Label x:Name="Username"/>
        </StackPanel>

        <StackPanel x:Name="BuyerStack" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Каталог" Click="ViewCatalog_CLick"/>
            <Button Content="Корзина" Click="ViewBasket_Click" Margin="5, 0"/>
            <Button Content="Заказы" Click="ViewMyOrder_Click"/>
            <Button Content="Профиль" Click="ViewProfile_Click" Margin="5, 0"/>
        </StackPanel>

        <StackPanel x:Name="SellerStack" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Товары" Click="ViewGood_CLick"/>
            <Button Content="Заказы" Click="ViewOrder_Click" Margin="5, 0"/>
            <Button Content="Профиль" Click="ViewProfile_Click"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <Button Content="Выйти" Margin="5" Click="Logout_Click"/>
        </StackPanel>
    </Grid>
</Page>
