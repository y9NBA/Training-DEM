<Page x:Class="TestDem.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestDem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <Button Content="Выйти" Margin="5" Click="Close_Click"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Margin="0, 0, 0, 10" Orientation="Horizontal">
                <Label Content="Логин" Width="100"/>
                <TextBox x:Name="Login" Width="150"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Пароль" Width="100"/>
                <PasswordBox x:Name="Password" Width="150"/>
            </StackPanel>
            <StackPanel>
                <Button Content="Вход" Margin="0, 10" Click="SignIn_Click"/>
                <Button Content="Регистрация" Click="SignUp_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
