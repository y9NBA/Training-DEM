<Page x:Class="TestDEMNet.Views.Pages.ManagerMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestDEMNet.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManagerMenuPage">

    <Grid>
        <Label VerticalAlignment="Top" HorizontalAlignment="Center" Content="Менеджер" Margin="10, 0"/>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <Button Width="200" 
                        Height="50"
                        Margin="5"
                        FontFamily="Segoe UI"
                        Background="#F4E8D3"
                        Click="ViewPartners_Click">
                    Партнёры
                </Button>

                <Button Width="200" 
                        Height="50"
                        Margin="5"
                        FontFamily="Segoe UI"
                        Background="#F4E8D3"
                        Click="ViewOrdersPartners_Click">
                    Заявки от партнёров
                </Button>
            </StackPanel>

            <StackPanel>
                <Button Width="200" 
                        Height="50"
                        Margin="5"
                        FontFamily="Segoe UI"
                        Background="#F4E8D3"
                        Click="ViewStatHistory_Click">
                    Статистика истории продаж
                </Button>

                <Button Width="200" 
                        Height="50"
                        Margin="5"
                        FontFamily="Segoe UI"
                        Background="#F4E8D3"
                        Click="ViewHistoryRating_Click">
                    История изменения рейтинга
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
