<Page x:Class="TestDEMNet.Views.Pages.Managers.ListPartnersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestDEMNet.Views.Pages.Managers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListPartnersPage"
      Loaded="Page_Loaded">

    <Grid>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
            <Label VerticalAlignment="Top" HorizontalAlignment="Center" Content="Партнёры" Margin="10, 0"/>
            
            <StackPanel x:Name="DataPanel">
                
            </StackPanel>    
        </StackPanel>

        <StackPanel x:Name="MainBtns" Margin="0, 0, 0, 75" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Margin="50, 0" Content="Создать" Width="75" Click="Create_Click"/>
            <Button Margin="50, 0" Content="Изменить" Width="75" Click="Edit_Click"/>
            <Button Margin="50, 0" Content="Удалить" Width="75" Click="Delete_Click"/>
            
            <ComboBox x:Name="UsersCmbBx" DisplayMemberPath="Username" Width="200">
            </ComboBox>
        </StackPanel>
    </Grid>
</Page>
