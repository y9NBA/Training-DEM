<Page x:Class="TestDEMNet.Views.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestDEMNet.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage"
      Background="#FFFFFF">

    <Grid>
        <Label VerticalAlignment="Top" HorizontalAlignment="Center" Content="Авторизация" Margin="10, 0"/>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Margin="0, 0, 0, 5" Orientation="Horizontal">
                <Label Content="Логин" Width="100"/>
                <TextBox x:Name="Username" Width="150"
                         FontFamily="Segoe UI"
                         Background="#F4E8D3"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Пароль" Width="100"/>
                <PasswordBox x:Name="Password" Width="150"
                             FontFamily="Segoe UI"
                             Background="#F4E8D3"/>
            </StackPanel>
            <StackPanel>
                <Button Content="Вход" Margin="0, 10" Click="SignIn_Click" FontFamily="Segoe UI" Background="#67BA80"/>
                <!-->
                <Button Content="Регистрация" Click="SignUp_Click" FontFamily="Segoe UI" Background="#67BA80"/>
                </!-->
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
